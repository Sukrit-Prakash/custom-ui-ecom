datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model Customer {
  id        Int    @id @default(autoincrement())
  email     String @unique
  name      String
  files     File[]
}

model File {
  id         Int      @id @default(autoincrement())
  filePath   String
  createdAt  DateTime @default(now())
  customer   Customer @relation(fields: [customerId], references: [id])
  customerId Int
}
